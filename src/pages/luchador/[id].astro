---
import { FIGHTERS } from '@/consts/fighters'
import Layout from '@/layouts/Layout.astro'
import { fixedTitle } from '@/consts/pageTitles'
import BackgroundLayout from '@/layouts/BackgroundLayout.astro'
import BoxerWorkout from '@/components/BoxerWorkout.astro'
import BoxerCard from '@/components/BoxerCard.astro'
import BoxerClip from '@/components/BoxerClip.astro'

const { id } = Astro.params

const fighter = FIGHTERS.find((fighter) => fighter.id === id)
if (!fighter) return Astro.redirect('/404')

const birthDate = fighter.birthDate.toLocaleDateString('es-ES', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
})

const opponent = FIGHTERS.find((f) => f.id === fighter.versus)
---
<Layout title={`${fighter.name} | ${fixedTitle}`}>

  <!-- Div de fondo, no se utilizo el componente para evitar el Max-h y modificarlo -->
  <div class="mask-fade-bottom absolute inset-0 w-full bg-[url('/images/hero.avif')] bg-cover bg-center "> </div>
  
  <!-- Seccion de Informacion principal -->
  <section class="mt-14 md:mt-28 mb-[75vh] relative lowercase max-w-7xl mx-auto flex flex-col md:flex-row h-[80vh] p-4 md:p-2">
    
    <!-- Clips -->
    <article class="bg-black/60 order-2 md:order-1 md:w-1/3 h-full flex items-center p-4 rounded-none">
      <BoxerClip clips={fighter.clips} />
    </article>

    <!-- Fighter -->
    <section class=" relative bg-black/60 order-1 md:order-2 md:w-1/3 rounded-none">
      <img
        src={`/images/fighters/big/${id}.webp`}
        alt={fighter.name}
        class=" h-full w-full object-contain mask-image-fade-bottom md:scale-110 animate-fade-in transition-all animate-duration-300 "
        transition:name={`image-${id}`}
      />
      <img
        src={`/images/fighters/text/${id}.png`}
        alt={fighter.name}
        class="animate-scale-in absolute bottom-24 h-16 w-auto animate-fade-in-up animate-delay-200"
        transition:name={`text-${id}`}
      />
    </section>
  
    <!-- Información -->
    <article class="bg-black/60 order-3 md:w-1/3 h-full rounded-none flex flex-col items-center justify-center p-4 ">
      <!-- Info Fighter -->
      <section>
          
        <h1 class="animate-fade-in-up text-theme-turquoise text-center text-3xl font-bold">
          {fighter.realName}
        </h1>

        <div class="grid grid-cols-2 gap-4 pt-7 pr-6 text-center animate-fade-in-up animate-delay-300">
          <div class="stat-item">
            <div class="text-sm text-gray-400">Edad</div>
            <div class="text-lg">{fighter.age} años</div>
          </div>
          <div class="stat-item">
            <div class="text-sm text-gray-400">Altura</div>
            <div class="text-lg">{fighter.height}m</div>
          </div>
          <div class="stat-item">
            <div class="text-sm text-gray-400">Peso</div>
            <div class="text-lg">{fighter.weight}kg</div>
          </div>
          <div class="stat-item">
            <div class="text-sm text-gray-400">Ciudad</div>
            <div class="text-lg">{fighter.city}</div>
          </div>
        </div>

          <!-- Birth Date -->
          <div class="animate-fade-in-up animate-delay-500 text-center">
            <div class="text-sm text-gray-400">Fecha de nacimiento</div>
            <div class="text-lg">{birthDate}</div>
          </div>
      </section>

      <!-- Versus Fighter -->
      <section>
      </section>  
    </article>

  </section>

  <!-- Workout -->
  <section class="lowercase max-w-7xl mx-auto">
    {fighter.workout && <BoxerWorkout workout={fighter.workout} />}
  </section>

  <!-- Galeria -->
  <section class="lowercase max-w-7xl mx-auto">
    galeria
  </section>
  
</Layout>

<style>
  .mask-image-fade-bottom {
    mask-image: linear-gradient(to bottom, black 70%, transparent 90%);
    -webkit-mask-image: linear-gradient(to bottom, black 70%, transparent 90%);
  }

  .animate-widest {
    animation: widest 0.4s ease-out forwards;
    animation-delay: 0.5s;
  }

  @keyframes widest {
    0% {
      width: 0%;
      opacity: 0;
    }
    5% {
      width: 5%;
      opacity: 0.5;
    }
    100% {
      width: 100%;
      opacity: 1;
    }
  }

  @keyframes fade-in-scale {
  0% {
    opacity: 0;
    transform: scale(0.8);
  }
  100% {
    opacity: 1;
    transform: scale(1);
  }
}

.animate-fighter {
  animation: fade-in-scale 0.5s ease-out forwards;
}

@keyframes fade-in {
  0% {
    opacity: 0;
  }
  100% {
    opacity: 1;
  }
}

.animate-info {
  animation: fade-in 0.5s ease-out 1.2s forwards;
}
</style>